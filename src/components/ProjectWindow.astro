---
const { title, url, content } = Astro.props;
---
<div class="p-10 gap-10 flex justify-center">
    <div class="rounded-xl bg-linear-to-r from-white to-gray-200 p-3 sm:gap-2 md:gap-0 md:flex md:max-w-225">
        <div class="shrink-0">
            <img 
                class="h-0 aspect-1/1 sm:h-75 sm:w-full sm:object-cover md:h-full md:w-75" 
                src={url}
            />
        </div>
        <div class="p-3">
            <p class="font-bold text-xl">{title}</p>
            <p class="font-thin text-lg">{content}</p>
        </div>
    </div>
    <div class="hidden xl:block xl:h-auto place-content-center">
        <div class="rounded-xl bg-linear-to-r from-blue-400 to-sky-500 place-content-center aspect-3/4 w-60 p-8">
            <div class="rounded-full bg-linear-to-r to-sky-400 from-indigo-400 aspect-1/1 w-45">
            </div>
        </div>
    </div>
</div>